%level 2  /*arct /arct load def

    %Redefine drawing functions

     /moveto { %def
      	/newy exch def
	/newx exch def
	newx newy *moveto
     } bind def
    
	/lineto { %def
		/oldy newy def
		/oldx newx def
		/newy exch def
		/newx exch def
		/xdis newx oldx sub def
		/ydis newy oldy sub def
		/dist xdis dup mul ydis dup mul add abs sqrt def
		dist break gt { %if
		/reps dist break idiv def
		/xdis xdis reps div def
		/ydis ydis reps div def
		1 1 reps { %repeat
			dup
			xdis modify mul oldx add exch
			ydis modify mul oldy add
  			*lineto
			} repeat
	 	} if
		newx modify newy modify *lineto
	} bind def

     /arcto { %def
          6modify
          *arcto
     }bind def
     /curveto { %def
	/newy exch def
	/newx exch def
	newx newy
          2modify
          *curveto
     } bind def
     /arc { %def
          5modify
          *curveto
     } bind def
     /rmoveto { %def
          2modify
          *rmoveto
     } bind def
     /rlineto { %def
          2modify
          *rlineto
     } bind def
     /rcurveto { %def
          6modify
          *rcurveto
     } bind def
     /arcn { %def
          5modify
          *arcn
     } bind def
